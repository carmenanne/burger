<div class= 'row'>
	<div class='col-md-4'>
		<ul class = 'bugerList'>
			{{#each burger}}
				{{#unless devoured}}
					{{> burgers/burger-block devoured=false}}
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class = 'col-md-2'>
	</div>
	<div>
		<ul>
			{{#each burger}}
				{{#if devoured}}
					{{> burgers/burger-block devoured=true}}
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>


<form class = 'create-form'>
	<div class = 'form-group'>
		<label for='burger'></label>
		<input type='text' id='burger'>
	</div>
	<button type='submit'>Submit</button>
	<p>Enter a burger you want to eat, then click the "Submit" button.</p>
</form>